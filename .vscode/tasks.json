{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Run",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "run"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "problemMatcher": "$rustc-watch",
      "isBackground": true
    },
    {
      "label": "Watch Check",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "check"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "problemMatcher": "$rustc-watch",
      "isBackground": true
    },
    {
      "label": "Watch Test",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "test"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "problemMatcher": "$rustc-watch",
      "isBackground": true
    },
    {
      "label": "Watch Clippy",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "clippy --all-targets"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "problemMatcher": "$rustc-watch",
      "isBackground": true
    }
  ]
}